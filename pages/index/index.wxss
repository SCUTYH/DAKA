page {
  background-color: #f1f1f1;
}

.link {
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.link:last-child {
  border-bottom: none;
}

.link .inner {
  padding: 30rpx;
  position: relative;
  font-size: 28rpx;
  color: #333;
}

.link .inner .icon {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  margin-bottom: -3rpx;
}

.link .inner .arrow {
  display: block;
  width: 13rpx;
  height: 21rpx;
  position: absolute;
  right: 30rpx;
  top: 37rpx;
}

.link .inner .value {
  display: inline-block;
  position: absolute;
  right: 60rpx;
  top: 30rpx;
  font-size: 26rpx;
  color: #999;
}

.btn {
  display: block;
  margin: 30rpx auto;
  width: 400rpx;
  height: 80rpx;
  background-color: #044565;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 8rpx;
  margin-top: 230rpx;
}
